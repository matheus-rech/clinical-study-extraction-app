# Clinical Study Extraction App - Environment Configuration
# Copy this file to .env and fill in your values

# ==================== Application ====================
ENVIRONMENT=production
DEBUG=False
LOG_LEVEL=INFO
HOST=0.0.0.0
PORT=8000

# ==================== Database ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=clinical_study
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/clinical_study

# ==================== Redis Cache ====================
REDIS_URL=redis://redis:6379/0

# ==================== API Keys ====================
# olmOCR (DeepInfra) - For VLM-based table extraction
OLMOCR_API_KEY=your_deepinfra_api_key_here
OLMOCR_PROVIDER=deepinfra
OLMOCR_ENABLED=true

# Gemini (optional - for enhanced features)
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic (optional - for enhanced features)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# ==================== CORS ====================
CORS_ORIGINS=*

# ==================== File Upload ====================
MAX_FILE_SIZE=100000000

# ==================== Frontend ====================
REACT_APP_API_URL=http://localhost:8000
NODE_ENV=production

# ==================== Docker Ports ====================
BACKEND_PORT=8000
FRONTEND_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ==================== Deployment (GitHub Actions) ====================
# Production Server
DEPLOY_HOST=your_server_ip_or_domain
DEPLOY_USER=ubuntu
DEPLOY_PORT=22
DEPLOY_PATH=/opt/clinical-study-extraction-app

# Staging Server (optional)
STAGING_HOST=your_staging_server
STAGING_USER=ubuntu
STAGING_PORT=22
STAGING_PATH=/opt/clinical-study-extraction-app-staging

# ==================== Notifications (optional) ====================
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# ==================== Security (Production) ====================
# Generate a secure secret key for production
# SECRET_KEY=your-secret-key-here-change-in-production
